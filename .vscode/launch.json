  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start TCP Server",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/tcpserver.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Start REST Server",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/restserver.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test TCP Server",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/test-integration/clientDevice.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha test",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--watch"
      ]
    }
  ]
}